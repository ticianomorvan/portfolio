---
type Props = astroHTML.JSX.ButtonHTMLAttributes;

const buttonProps = Astro.props;

const baselineStyles =
  "group my-6 px-4 py-2 flex gap-1 items-center rounded-full bg-blue-600 text-white";
---

<button
  class={baselineStyles.concat(" ", buttonProps.class ?? "")}
  {...buttonProps}
>
  <slot />
</button>
